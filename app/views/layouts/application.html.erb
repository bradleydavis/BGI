			<li class="phone">(04) 385 9549</li>
			<li class="location">3 Macdonald Cres, Te Aro</br>Wellington 6141</li>
		</ul>
	</div>
	<!-- END - Contact info -->

	<!-- Request a callback -->
	<div class="side-section cf">
		<h3>Contact us</h3>
		<div class="input-container">
			<input type="text" value="your email*" name="your email" id="your email" onblur="if (this.value == '') {this.value = 'your email*';}" onfocus="if (this.value == 'your email*') {this.value = '';}" />
